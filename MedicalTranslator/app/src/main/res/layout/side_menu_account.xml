<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/account_side_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SideMenuAccountActivity">

<!--    <com.google.android.material.navigation.NavigationView-->
<!--        android:id="@+id/nav_menu_view"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_gravity="start"-->
<!--        app:headerLayout="@layout/menu_header"-->
<!--        app:menu="@menu/navigation_menu"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/account_relative"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:background="@color/account_background">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/account_pic"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="38dp"
                android:src="@drawable/test_user" />
            <ImageButton
                android:id="@+id/change_img_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="150dp"
                android:background="@drawable/round_button"
                android:src="@drawable/ic_photo_camera_24"/>
            <TextView
                android:id="@+id/account_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="@color/white"
                android:textSize="34sp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/account_pic"
                android:layout_marginEnd="40dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/edit_info_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="edit"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:background="@drawable/round_rectangle_button"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="15dp"/>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Username"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/searchbar_words"
                        android:padding="10dp"
                        android:layout_marginStart="16dp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.8"
                        android:text="Username"
                        android:textSize="18sp"
                        android:textColor="@color/searchbar_words"
                        android:background="@drawable/underline"
                        android:padding="10dp"
                        android:layout_marginEnd="16dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Email"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/searchbar_words"
                        android:padding="10dp"
                        android:layout_marginStart="16dp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.8"
                        android:text="Email"
                        android:textSize="18sp"
                        android:textColor="@color/searchbar_words"
                        android:background="@drawable/underline"
                        android:padding="10dp"
                        android:layout_marginEnd="16dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Phone"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/searchbar_words"
                        android:padding="10dp"
                        android:layout_marginStart="16dp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.8"
                        android:text="Phone"
                        android:textSize="18sp"
                        android:textColor="@color/searchbar_words"
                        android:background="@drawable/underline"
                        android:padding="10dp"
                        android:layout_marginEnd="16dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Gender"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/searchbar_words"
                        android:padding="10dp"
                        android:layout_marginStart="16dp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.8"
                        android:text="Gender"
                        android:textSize="18sp"
                        android:textColor="@color/searchbar_words"
                        android:background="@drawable/underline"
                        android:padding="10dp"
                        android:layout_marginEnd="16dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Birth"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/searchbar_words"
                        android:padding="10dp"
                        android:layout_marginStart="16dp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.8"
                        android:text="Birth"
                        android:textSize="18sp"
                        android:textColor="@color/searchbar_words"
                        android:background="@drawable/underline"
                        android:padding="10dp"
                        android:layout_marginEnd="16dp"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>