<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/help_side_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SideMenuHelpActivity">

    <!--    <com.google.android.material.navigation.NavigationView-->
    <!--        android:id="@+id/nav_menu_view"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_gravity="start"-->
    <!--        app:headerLayout="@layout/menu_header"-->
    <!--        app:menu="@menu/navigation_menu"/>-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/subtitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Main Service"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="12dp"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <ImageButton
                        android:id="@+id/help_helpCenter_btn"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/round_button_help_page"
                        android:src="@drawable/icon_help_48_blue"/>
                    <TextView
                        android:id="@+id/help_helpCenter_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Help Center"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <ImageButton
                        android:id="@+id/help_feedback_btn"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/round_button_help_page"
                        android:src="@drawable/icon_feedback_48_blue"/>
                    <TextView
                        android:id="@+id/help_feedback_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Feedback"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <ImageButton
                        android:id="@+id/help_instruction_btn"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/round_button_help_page"
                        android:src="@drawable/icon_manual_48_blue"/>
                    <TextView
                        android:id="@+id/help_instruction_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Instruction"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <ImageButton
                        android:id="@+id/help_about_btn"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/round_button_help_page"
                        android:src="@drawable/icon_contact_48_blue"/>
                    <TextView
                        android:id="@+id/help_about_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Contact Us"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#c8f4ff"
                android:layout_marginTop="30dp"/>
            <TextView
                android:id="@+id/subtitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Common Problem"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"/>
            <ExpandableListView
                android:id="@+id/expandable_listView"
                android:groupIndicator="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"/>
        </LinearLayout>
    </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>